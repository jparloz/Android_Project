<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.project_android.UI.SearchFragment"
    android:backgroundTint="@color/white">
    <androidx.cardview.widget.CardView
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="10dp"
        android:id="@id/cardTitle"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/imageResult"
                android:tint="@color/cv_back"
                android:src="@drawable/search_result"
                android:scaleType="centerCrop"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                tools:ignore="MissingConstraints"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:id="@+id/nameResult"
                android:text="Results"
                style="@style/TextColor"
                android:textSize="20sp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/imageResult"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="463dp"
        android:layout_below="@id/cardTitle"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="90dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/recycler_item"/>
            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progress_bar"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
