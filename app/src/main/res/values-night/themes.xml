<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Projectandroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!--Primary brand color. -->
        <item name="colorPrimary">@color/TopBar</item>
        <item name="colorPrimaryVariant">@color/TopBar</item>
        <item name="colorOnPrimary">@color/grey</item>
        <!--Primary brand color. -->
        <item name="colorSecondary">@color/TopBar</item>
        <item name="colorSecondaryVariant">@color/TopBar</item>
        <item name="colorOnSecondary">@color/grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="ScreenBackground"><item name="android:background">@color/black</item></style>
    <style name="CardBackground"><item name="android:background">@color/grey</item></style>
    <style name="TextColor"><item name="android:textColor">@color/typeNight</item></style>
    <style name="ImageChange"><item name="android:background">@drawable/headerbkg_night</item></style>
</resources>